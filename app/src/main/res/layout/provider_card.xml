<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/InfoCard">

    <GridLayout
        style="@style/InfoCardContent">

        <TextView
            style="@style/Category"
            android:text="@string/category_provider" />

        <TextView
            style="@style/Item"
            android:text="@string/gps_status" />

        <TextView
            style="@style/Value"
            android:id="@+id/gps_status" />

        <View style="@style/Divider"/>

        <TextView
            style="@style/Item"
            android:text="@string/network_status" />

        <TextView
            style="@style/Value"
            android:id="@+id/network_status" />

        <View style="@style/Divider"/>

        <TextView
            style="@style/Item"
            android:text="@string/passive_status" />

        <TextView
            style="@style/Value"
            android:id="@+id/passive_status" />
    </GridLayout>
</android.support.v7.widget.CardView>
